
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model News.Application.ViewModels.DetailViewModel
<div class="bradcam_area breadcam_bg overlay2">
    <h3>Tin tức</h3>
</div>
<section class="blog_area single-post-area section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 posts-list">
                <div class="single-post">
                    <div class="feature-img">
                        <img class="img-fluid" src="@Model.News.Image" alt="">
                    </div>
                    <div class="blog_details">
                        <h2>
                            @Model.News.Title
                        </h2>
                        <ul class="blog-info-link mt-3 mb-4">
                            <li><a href="#"><i class="fa fa-user"></i> @Model.News.Category</a></li>
                        </ul>
                        @Html.Raw(Model.News.Content)
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="blog_right_sidebar">
                    
                    <aside class="single_sidebar_widget post_category_widget">
                        <h4 class="widget_title">Danh mục bài viết</h4>
                        <ul class="list cat-list">
                            @foreach (var category in Model.Categories)
                            {
                                <li>
                                    <a href="?categoryId=@category.Id" class="d-flex">
                                        <p>@category.Name</p>
                                        @*<p>(37)</p>*@
                                    </a>
                                </li>
                            }

                        </ul>
                    </aside>
                </div>
            </div>
        </div>
    </div>
</section>
