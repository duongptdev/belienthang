
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using News.Common;
@model News.Application.ViewModels.HomeViewModel
<!-- header-end -->
<!-- slider_area_start -->
<div class="slider_area ">
    <div class="single_slider d-flex align-items-center justify-content-center" style="background-image: url('@Model.Settings.FirstOrDefault(x => x.Section.Equals(EnumSection.Header)).Image');">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-xl-6 col-md-6">
                    <div class="illastrator_png">
                        @*<img src="@Model.Settings.FirstOrDefault().Image" alt="">*@
                    </div>
                </div>
                <div class="col-xl-6 col-md-6">
                    <div class="slider_info">
                        <h3>
                            @Model.Settings.FirstOrDefault(x => x.Section.Equals(EnumSection.Header)).Content
                        </h3>
                        @*<a href="#" class="boxed_btn">Xem thêm thông tin</a>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- slider_area_end -->
<!-- about_area_start -->
<div class="about_area">
        <div class="container">
            <div class="row">
                <div class="col-xl-5 col-lg-6">
                    <div class="single_about_info">
                        <h3>@Model.Settings.FirstOrDefault(x => x.Section.Equals(EnumSection.Summary)).Title</h3>
                        <p>@Model.Settings.FirstOrDefault(x => x.Section.Equals(EnumSection.Summary)).Content </p>
                        <a href="#" class="boxed_btn">Enroll a Course</a>
                    </div>
                </div>
                <div class="col-xl-6 offset-xl-1 col-lg-6">
                    <div class="about_tutorials">
                        <div class="courses">
                            <div class="inner_courses">
                                <div class="text_info">
                                    <span>@Model.Settings.FirstOrDefault(x => x.Section.Equals(EnumSection.Summary)).ValueFirst +</span>
                                    <p> @Model.Settings.FirstOrDefault(x => x.Section.Equals(EnumSection.Summary)).TextFirst</p>
                                </div>
                            </div>
                        </div>
                        <div class="courses-blue">
                            <div class="inner_courses">
                                <div class="text_info">
                                    <span>@Model.Settings.FirstOrDefault(x => x.Section.Equals(EnumSection.Summary)).ValueSecond</span>
                                    <p> @Model.Settings.FirstOrDefault(x => x.Section.Equals(EnumSection.Summary)).TextSecond</p>
                                </div>

                            </div>
                        </div>
                        <div class="courses-sky">
                            <div class="inner_courses">
                                <div class="text_info">
                                    <span>@Model.Settings.FirstOrDefault(x => x.Section.Equals(EnumSection.Summary)).ValueThrid +</span>
                                    <p> @Model.Settings.FirstOrDefault(x => x.Section.Equals(EnumSection.Summary)).TextThrid</p>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<!-- about_area_end -->
<!-- popular_courses_start -->
<div class="section-top-border">
				
				<div class="row">
					<div class="col-md-6">
						<div class="home-header" style="font-weight: bold; font-size: 25px; padding-left: 150px;padding-top: 10px;">
                            @Model.HomeNew.Title
                        </div>
                        <div class="home-content" style="padding-left: 100px;">
                            @Html.Raw(Model.HomeNew.Content);
                        </div>
					</div>
					<div class="col-md-6">
						<img src="@Model.HomeNew.Image" alt="" class="img-fluid">
					</div>
				</div>
			</div>
<div class="popular_courses">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="section_title text-center mb-100">
                    <h3>Tin tức</h3>
                    <p>
                        Tin tức mới nhất về công nghệ, sản phẩm, giải pháp và xu hướng
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-12">
                <div class="course_nav">
                    <nav>
                        <ul class="nav" id="myTab" role="tablist">
                            @foreach (var category in Model.CategoryNews)
                            {
                                <li class="nav-item">
                                    <a class="nav-link @category.Selector" id="@category.Category.Code-tab" data-toggle="tab" href="#@category.Category.Code" role="tab"
                                       aria-controls="@category.Category.Code" aria-selected="false">@category.Category.Name</a>
                                </li>
                            }
                            
                        </ul>
                    </nav>
                </div>
            </div>
        </div>

    </div>
    <div class="all_courses">
        <div class="container">
            <div class="tab-content" id="myTabContent">
                @foreach(var category in Model.CategoryNews)
                {
                    <div class="tab-pane fade @category.Selector" id="@category.Category.Code" role="tabpanel" aria-labelledby="@category.Category.Code-tab">
                        <div class="row">
                            @foreach(var news in category.News)
                            {
                                <div class="col-xl-4 col-lg-4 col-md-6">
                                    <div class="single_courses">
                                        <div class="thumb">
                                            <a href="/Home/Detail?id=@news.Id">
                                                <img style="height: 250px; width: 100%;" src="@news.Image" alt="">
                                            </a>
                                        </div>
                                        <div class="courses_info" style="overflow: hidden;display: -webkit-box; -webkit-line-clamp: 2;line-clamp: 2; -webkit-box-orient: vertical;">
                                            <span>@news.Category</span>
                                            <h3>
                                                <a href="/Home/Detail?id=@news.Id">
                                                    @news.Title
                                                </a>
                                            </h3>
                                        </div>
                                    </div>
                                </div>

                            }
                            <div class="col-xl-12">
                                <div class="more_courses text-center">
                                    <a href="/Home/GetAll" class="boxed_btn_rev">Xem thêm</a>
                                </div>
                            </div>
                        </div>
                    </div>

                }
                
            </div>
        </div>
    </div>
</div>
<!-- popular_courses_end-->
<!-- testimonial_area_start -->



<div class="testimonial_area testimonial_bg_1 overlay">
    <div class="testmonial_active owl-carousel">
        <div class="single_testmoial">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="testmonial_text text-center">
                            <div class="author_img">
                                <img src="img/testmonial/author_img.png" alt="">
                            </div>
                            <p>
                                "Working in conjunction with humanitarian aid <br> agencies we have supported
                                programmes to <br>
                                alleviate.
                                human suffering.

                            </p>
                            <span>- Jquileen</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="single_testmoial">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="testmonial_text text-center">
                            <div class="author_img">
                                <img src="img/testmonial/author_img.png" alt="">
                            </div>
                            <p>
                                "Working in conjunction with humanitarian aid <br> agencies we have supported
                                programmes to <br>
                                alleviate.
                                human suffering.

                            </p>
                            <span>- Jquileen</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- testimonial_area_end -->
<!-- our_courses_start -->
<div class="our_courses">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="section_title text-center mb-100">
                    <h3>MÔ HÌNH KINH DOANH</h3>
                    <p>
                        Đội ngũ chuyên nghiệp, mạng lưới đại lý rộng khắp và kinh nghiệm gần 30 năm ở thị trường Việt Nam đã giúp Synnex FPT khẳng định vị thế dẫn đầu trong thị phần phân phối của các hãng đối tác
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-3 col-md-6 col-lg-6">
                <div class="single_course text-center">
                    <div class="icon">
                        <i class="flaticon-crown"></i>
                    </div>
                    <h3>PHÂN PHỐI</h3>
                    <p>
                        Phân phối sản phẩm và giải pháp cho doanh nghiệp thông qua đại lý dự án. Synnex FPT có vai trò như cánh tay nối dài của đối tác trong việc đưa sản phẩm và giải pháp vào thị trường Việt Nam.
                    </p>
                </div>
            </div>
            <div class="col-xl-3 col-md-6 col-lg-6">
                <div class="single_course text-center">
                    <div class="icon">
                        <i class="flaticon-art-and-design"></i>
                    </div>
                    <h3>HỖ TRỢ DỰ ÁN</h3>
                    <p>
                        Phân phối sản phẩm và giải pháp cho doanh nghiệp thông qua đại lý dự án. Synnex FPT có vai trò như cánh tay nối dài của đối tác trong việc đưa sản phẩm và giải pháp vào thị trường Việt Nam.
                    </p>
                </div>
            </div>
            <div class="col-xl-3 col-md-6 col-lg-6">
                <div class="single_course text-center">
                    <div class="icon blue">
                        <i class="flaticon-business-and-finance"></i>
                    </div>
                    <h3>FULFILLMENT</h3>
                    <p>
                        Triển khai đơn hàng riêng cho các khách hàng cụ thể. Dịch vụ linh hoạt theo yêu cầu của từng đối tác.
                    </p>
                </div>
            </div>
            <div class="col-xl-3 col-md-6 col-lg-6">
                <div class="single_course text-center">
                    <div class="icon">
                        <i class="flaticon-premium"></i>
                    </div>
                    <h3>BÁN HÀNG ĐA KÊNH</h3>
                    <p>
                        Phân phối sản phẩm online hoặc trên các nền tảng thương mại điện tử mới. Nhanh chóng và linh hoạt là thế mạnh của Synnex FPT trong mảng e-com.
                    </p>
                </div>
            </div>
            
        </div>
    </div>
</div>

<div class="slider_area ">
    <div class="single_slider d-flex align-items-center justify-content-center" style="background-image: url('@Model.Settings.FirstOrDefault(x => x.Section.Equals(EnumSection.Footer)).Image');">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-xl-6 col-md-6">
                    <div class="illastrator_png">
                        @*<img src="@Model.Settings.FirstOrDefault().Image" alt="">*@
                    </div>
                </div>
                <div class="col-xl-6 col-md-6">
                    <div class="slider_info">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

